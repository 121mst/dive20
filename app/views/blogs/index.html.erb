<section>
  <p class="flash"><%= notice %><%= alert %></p>
</section>


<div class="container">
  <div class="wrapper col-md-12">
    <p><%= notice %></p>
    <%= link_to "投稿する", new_blog_path, class: 'btn btn-primary btn-block' %>
    <% @blogs.each do |blog| %>
　　 <div class="panel panel-info">
        <div class="panel-heading">
　　       <p class="text-left">
              <%= profile_img(blog.user) %>
              <strong><%= blog.user.name %></strong>
              <%= blog.created_at.strftime("%Y-%m-%d %H:%M:%S") %> </p>
       </div>
         <div class="panel-body">
           <p class="text-left"><%= blog.content %></p>
           <!-- 投稿画像 追加箇所 開始 -->
           <p>
             <% if blog.image? %>
               <div class="thumbnail">
                 <%= image_tag blog.image %>
               </div>
             <% end %>
           </p>
           <!-- 投稿画像 追加箇所 終了 -->
         </div>
         <div class="list-group-item list-group-item-info">
           <p class="text-right">
           <%= link_to "コメントする", blog_path(blog), class: 'btn btn-default btn-xs btn-primary' %>
           <%= link_to "編集", edit_blog_path(blog.id), class: 'btn btn-default btn-xs btn-primary' %>
           <%= link_to "削除", blog_path(blog.id), method: :delete, data: { confirm: '本当に削除していいですか？'}, class: 'btn btn-default btn-xs btn btn-primary' %>
         </p>
        </div>
    </div>
    <% end %>
  </div>
</div>
<div id="page-top-btn" class="page-top-btn">
    <p><a class="move-page-top" id="move-page-top">▲</a></p>
</div>
