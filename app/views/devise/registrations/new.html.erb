<div class="container">
  <div class="wrapper col-md-12">
    <h2>サインアップ</h2>

    <%= alert %>

    <%= form_for(resource, as: resource_name, url: user_registration_path) do |f| %>
      <%= devise_error_messages! %>

      <div class="form-group">
        <%= f.email_field :email, autofocus: true, class: "form-control input-lg", placeholder: "メールアドレス" %>
      </div>

      <div class="form-group">
        <%= f.text_field :name, class: "form-control input-lg", placeholder: "名前" %>
      </div>

      <div class="form-group">
        <%= f.password_field :password, autocomplete: "off", class: "form-control input-lg", placeholder: "パスワード" %>
      </div>

      <div class="form-group">
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control input-lg", placeholder: "パスワード（確認）" %>
      </div>

      <div class="form-group">
          <button class="btn btn-primary btn-lg btn-block">Sign UP</button>
      </div>

    <% end %>

    <%= render "devise/shared/links" %>
</div>
</div>
